    </head>
    <body>

        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
        
                    <a class="navbar-brand" href="/"><i class="fas fa-fish"></i>Fish Tank Diary</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                    <li class="<%= typeof page !== 'undefined' && page === 'posts' ? 'active' : '' %>"><a href="/posts"><i class="fas fa-home"></i>Home</a></li>
                    <li class="<%= typeof page !== 'undefined' && page === 'new' ? 'active' : '' %>"><a href="/posts/new"><i class="fas fa-book"></i>New Entry</a></li>

                    
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                      <% if(!currentUser){ %>
                          <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login"><i class="fas fa-sign-in-alt"></i>Login</a></li>
                          <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register"><i class="fas fa-user-plus"></i>Sign Up</a></li>
                      <% } else { %>
                          <li><a href="#"><i class="fas fa-user"></i>Signed In as <%= currentUser.username %></a></li>
                          <li><a href="/logout"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
                      <% } %>
                  </ul>
                </div>
            </div>
        </nav>
        
        <div class="container">
            <% if(error && error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>

