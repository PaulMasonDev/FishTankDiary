<%- include("./partials/header") %>

<div class="row">
    <h1 id="signup-title">Sign Up</h1>
    <div style="width: 350px; margin: 25px auto;">
        <form id="register-form" action="/register" method="post">
            <div class="form-group">
                <label for="username">Enter a Username:</label>
                <input id="username" class="form-control" type="text" name="username" placeholder="Username" value="<%= locals.username %>">
            </div>
            <div class="form-group">
                <label for="firstName">Enter your First Name:</label>
                <input id="firstName" class="form-control" type="text" name="firstName" placeholder="First Name" value="<%= locals.firstName %>">
            </div>
            <div class="form-group">
                <label for="lastName">Enter your Last Name:</label>
                <input id="lastName" class="form-control" type="text" name="lastName" placeholder="Last Name" value="<%= locals.lastName %>">
            </div>
            <div class="form-group">
                <label for="email">Enter a valid email address:</label>
                <input id="email" class="form-control" type="email" name="email" placeholder="Email" value="<%= locals.email %>">
            </div>
            <div class="form-group">
                <label for="emailConfirm">Confirm email address:</label>
                <input id="emailConfirm" class="form-control" type="email" name="emailConfirm" placeholder="Email" value="<%= locals.emailConfirm %>">
            </div>
            <div class="form-group">
                <label for="password">Enter a password:</label>
                <input id="password" class="form-control" type="password" name="password" placeholder="password"
                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" oninvalid="this.setCustomValidity('Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters')"
                onchange="try{setCustomValidity('')}catch(e){}" required title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
            </div>
            <div class="form-group">
                <label for="passwordConfirm">Confirm password:</label>
                <input id="passwordConfirm" class="form-control" required type="password" name="passwordConfirm" placeholder="password">
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a href="/posts">Go Back</a>
    </div>
</div>
<%- include("./partials/footer") %>